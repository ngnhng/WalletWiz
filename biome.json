{
	"$schema": "https://biomejs.dev/schemas/1.6.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useImportType": "off"
			}
		}
	},
	"files": {
		"ignore": ["node_modules", "dist", "*.js", "*.d.ts", "*.map", "backend"],
		"ignoreUnknown": true
	}
}
